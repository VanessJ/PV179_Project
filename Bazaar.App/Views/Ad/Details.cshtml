@model AdDetailViewModel


<h1>@Model.Title</h1>

@if (Model.PlaceholderLinks.Count() == 0)
{
    <div>This ad does not contain any images. For more images contact creator.</div>
}

@if (Model.PlaceholderLinks.Count() > 0)
{
    <div id="carouselExampleControls" class="carousel slide" data-interval="false">
        <div class="carousel-inner">
            @{
                var first = true;
            }
            @foreach (var item in Model.PlaceholderLinks)
            {
                <div height = 500 class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
                    <img class="d-block img-fluid" src="@item">
                </div>
                first = false;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
       data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
       data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th> Description</th>
            <th> Price</th>  
            <th> Type</th>
            <th> Creator </th>

        </tr>
    </thead>
    <tbody>
 
            <tr>
                <td class="align-middle">
                    @Model.Description
                </td>
                <td class="align-middle">
                    @Model.Price €
                </td>

                <td class="align-middle">
                    @if (Model.IsOffer)
                    {
                        <div>Offer</div>
                    }
                    @if (!Model.IsOffer)
                    {
                        <div>Demand</div>
                    }
                </td>

                <td class="align-middle">
                    @Model.Creator.UserName
                </td>
            </tr>
    </tbody>
</table>

 @foreach (var tag in Model.AdTags)
 {
     @tag.Tag.TagName
 }




