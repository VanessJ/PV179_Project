@model AdDetailViewModel
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">@Model.Title</h1>

        @if (Model.Images.Count() == 0)
        {
            <div>This ad does not contain any images. For more images contact creator.</div>
        }

        @if (Model.Images.Count() > 0)
        {
            <div id="carouselExampleControls" class="carousel slide" data-interval="false">
                <div class="carousel-inner" style="width: 100">
                    @{
                        var first = true;
                    }
                    @foreach (var item in Model.Images)
                    {
                        <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
                            <img class="img-fluid" src="@item.Url" >
                        </div>
                        first = false;
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
               data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button"
               data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        }
    </div>
</div>

<div>
    <div>
        <p class="mb-4" style="font-size: 20px;">@Model.Description</p>
    </div>

    <ul class="list-inline mb-3 mb-lg-2 tag-font" style="font-size: 15px;">
        @foreach (var tag in Model.AdTags)
        {
            <li class="list-inline-item">#@tag.Tag.TagName</li>
        }
    </ul>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th> Description</th>
            <th> Price</th>  
            <th> Type</th>
            <th> Creator </th>

        </tr>
    </thead>
    <tbody>
 
            <tr>
                <td class="align-middle">
                    @Model.Description
                </td>
                <td class="align-middle">
                    @Model.Price €
                </td>

                <td class="align-middle">
                    @if (Model.IsOffer)
                    {
                        <div>Offer</div>
                    }
                    @if (!Model.IsOffer)
                    {
                        <div>Demand</div>
                    }
                </td>

                <td class="align-middle">
                    @Model.Creator.UserName
                </td>
            </tr>
    </tbody>
</table>

