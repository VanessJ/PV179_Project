@model TagIndexViewModel

<h4>Tags</h4>
<a class="btn btn-primary" href="@Url.Action("Add")">Add</a>
<table class="table table-striped">
    <thead>
    <tr>
        <th style="width:70%">TagName</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var tag in Model.Tags)
    {
        <tr>
            <td>@tag.TagName</td>
            <td>
                @using (Html.BeginForm("Delete", "Tag", new { id = tag.Id }, FormMethod.Post, true, new { @class = "form-inline" }))
                {
                    <a class="btn btn-secondary my-1" href="@Url.Action("Edit", new { Id = tag.Id })">Edit</a>
                    <input class="btn btn-secondary my-1" type="submit" value="Delete" />
                }
            </td>
        </tr>
    }
    </tbody>
</table>